{
  "compilerOptions": {
    "module": "umd",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2015"],
    "typeRoots": ["node_modules/@types","../../node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
